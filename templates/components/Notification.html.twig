<div{{ attributes.defaults({class: 'toast fade show p-3 text-bg-' ~ type}) }}
    role="alert" 
    aria-live="polite" 
    aria-atomic="true">
        <div class="text-end text-light">
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <p>{{ message }}</p>
</div>
