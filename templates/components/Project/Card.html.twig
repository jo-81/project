<div{{ attributes.defaults({class: 'col-12'}) }}>
    <article class="card">
        <div class="card-body">
            <h2 class="h6 d-flex justify-content-between align-items-center">
                <a href="{{ path('project.single', {id: project.id}) }}">{{ project.name }}</a>
                {% if project.archived %}
                <twig:ux:icon name="mdi:archive-outline" class="icon text-secondary" />
                {% endif %}
            </h2>
            <p>{{ project.description }}</p>
        </div>

        <footer class="card-body d-flex justify-content-between align-items-center pt-0">
            <p class="small">{{ project.createdAt|date('m/d/Y') }}</p>
            <p class="small">{{ this.numberTask }}</p>
            {{ this.numberTaskCompleted }}
        </footer>
    </article>
</div>
