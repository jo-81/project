<div{{ attributes.defaults({ class: "mt-3 card card-body col-12 col-xl-6" }) }}>
    {{ form_start(form, {
        attr: {
            'data-action': 'live#action:prevent',
            'data-live-action-param': methodName,
        }
    }) }}
        
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}

        <button type="submit" class="btn btn-primary">{{ actionName }}</button>

    {{ form_end(form) }}
</div>