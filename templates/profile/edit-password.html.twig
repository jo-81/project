{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}
<section>
    <twig:HeaderPage title="Modifier mon mot de passe"/>

    <section class="container my-5">
        <div class="row g-3">
            <div class="col-12 col-lg">
                <turbo-frame id="user_edit">
                    <article class="card card-body">
                        <h2 class="mb-3 h5">
                            <twig:ux:icon name="tabler:user-edit" class="icon bg-primary bg-opacity-10 p-2 text-primary rounded-circle" />
                            <span>Informations</span>
                        </h2>

                        {% include "partials/_alert.html.twig" %}
                    
                        <div 
                            data-controller='password-validator'>
                            {{ form_start(form) }}
                    
                            {{ form_row(form.plainPassword.first) }}
                            {{ form_row(form.plainPassword.second) }}
                    
                            <div>
                                <button
                                    class="btn btn-outline-primary" 
                                    type="submit">Modifier mot de passe</button>
                            </div>
                    
                            {{ form_end(form) }}
                        </div>

                        <hr class="my-4">

                        <div>
                            <p>Votre mot de passe doit contenir</p>
                            <ul class="mb-0">
                                <li>8 caractères au minimum</li>
                                <li>1 chiffre</li>
                                <li>une majuscule</li>
                            </ul>
                        </div>
                    </article>
                </turbo-frame>
            </div>
    
            <div class="col-12 col-lg">
                <article class="card card-body">
                    <h2 class="mb-3 h5">
                        <twig:ux:icon name="tabler:activity"
                            class="icon bg-primary bg-opacity-10 p-2 text-primary rounded-circle" /> <span>Activités</span>
                    </h2>
                    <p>Aucune activité d'enregistré</p>
                </article>
            </div>
        </div>
    </section>
</section>
{% endblock %}