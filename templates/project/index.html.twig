{% extends 'base.html.twig' %}

{% block title %}Mes projets{% endblock %}

{% block body %}
<section>
    <twig:HeaderPage title="Mes projets">
        <twig:block name="body">
            <p>Nombre de projet : {{ number_project }}</p>
            <div>
                {{ user_capability(app.user) }}
            </div>
        </twig:block>

        
        <twig:block name="footer">
            {% if had_capability(app.user) %}
                <p><a class="btn btn-primary" href="#">Ajouter</a></p>
            {% endif %}
        </twig:block>
    </twig:HeaderPage>

    <twig:Project:Lists />
</section>
{% endblock %}
