{% extends 'base.html.twig' %}

{% block title %}{{ project.name }} | Projet{% endblock %}

{% block body %}
<section>
    <twig:HeaderPage title="{{ project.name }}">
        <twig:block name="body">
            <div class="mb-3">
                <p>
                    <twig:ux:icon name="tabler:clock" class="icon-sm text-secondary"/> 
                    {{ project.createdAt|date('d/m/Y') }}
                </p>
                {% if project.archived %}
                    <p>
                        <twig:ux:icon name="tabler:archive" class="icon-sm text-secondary"/> 
                        Projet Archiv√©
                    </p>
                {% endif %}
            </div>

            <p class="pb-2">
                <a  class="" 
                    data-bs-toggle="collapse" 
                    href="#collapseContentProject" 
                    role="button"
                    aria-expanded="false" 
                    aria-controls="collapseContentProject">Description
                </a>
            </p>
            <div class="collapse show" id="collapseContentProject">
                {% if project.description %}
                    <div class="mb-3">
                        {{ project.description|raw }}
                    </div>
                {% endif %}
                
                <div>
                    <a href="#" class="btn btn-primary">Modifier</a>
                    <a href="#" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        </twig:block>

        <twig:block name="footer">
            <twig:LabelList project="{{ project }}"/>
        </twig:block>
    </twig:HeaderPage>

    <section class="container my-5">
        <div class="row g-2">
            {% for section in project.sections %}

            <div class="col-12">
                <article class="card card-body">
                    <header>
                        <h3 class="h6">{{ section.name }}</h3>
                    </header>

                    <div class="row g-2">
                        {% for task in section.tasks %}
                        <div class="col-12">
                            <article class="card card-body">
                                <h4 class="h6">{{ task.name }}</h4>
                                <p>{{ task.content }}</p>
                            </article>
                        </div>
                        {% endfor %}
                    </div>
                </article>
            </div>
            {% endfor %}
        </div>
    </section>
</section>
{% endblock %}